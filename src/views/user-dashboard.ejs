<div id="hide-info"></div>

<section id="user-dbpage">
  <h2>User Dashboard</h2>

  <div id="tabs">
    <button class="btn" id="tab-2">Book a flight</button>
    <button class="btn" id="tab-3">Previous Bookings</button>
    <button class="btn" id="tab-4">Delete Booking</button>
    <button class="btn" id="tab-5">Update a Booking</button>
  </div>

  <div id="frame-1">
    <form action="/api/flights" method="get" class="form-body">
      <div class="form-field">
        <label for="departureCity">Departure City</label>
        <input type="text" name="departureCity" required />
      </div>
      <div class="form-field">
        <label for="arrivalCity">Arrival City</label>
        <input type="text" name="arrivalCity" required />
      </div>
      <div class="form-field">
        <label for="date">Departure Date</label>
        <input type="date" name="departureDate" value="<%= new Date()%>" />
      </div>
      <div class="form-field">
        <label for="seatClass">Preferred Class</label>
        <input type="text" name="seatClass" id="seatClass" value="any" />
      </div>
      <button class="btn btn-submit">Search</button>
    </form>
  </div>
  <div class="box hide" id="box-2"></div>
  <div class="box hide" id="box-3"></div>
  <div class="box hide" id="box-4"></div>
  <div class="box hide" id="box-5"></div>
</section>
